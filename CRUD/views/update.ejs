<%- include('./partials/header.ejs') %>

   <div class="w-[50%] mt-5">
    <h3 class="text-2xl text-center font-mono bg-indigo-500 text-white py-2 mx-5"> Update Student </h3>
    <div class="mt-5 p-5">
        <form method="post" action="/update/<%= data._id %>">
            <div class="mt-4">
                <label class="block pl-2 text-gray-600 text-sm font-bold mb-2 text-xl">Name</label>
                <input class="shadow border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-2 outline-gray-300 focus:shadow-outline" id="name" name="name" type="text" value="<%= data.name %>" placeholder="Your name">
            </div>
            <div class="mt-4">
                <label class="block pl-2 text-gray-600 text-sm font-bold mb-2 text-xl">Age</label>
                <input class="shadow border rounded w-full py-3 px-4 text-gray-700 leading-tight  focus:outline-2 outline-gray-300 focus:shadow-outline" id="age" name="age" type="number" value="<%= data.age %>"  placeholder="Your age">
            </div>
            <div class="mt-4">
                <label class="block pl-2 text-gray-600 text-sm font-bold mb-2 text-xl">Year</label>
                <input class="shadow border rounded w-full py-3 px-4 text-gray-700 leading-tight  focus:outline-2 outline-gray-300 focus:shadow-outline" id="year" name="year" type="number" value="<%= data.year %>"  placeholder="Joining date">
            </div>
            <div class="mt-10 flex gap-5">
               
                <button type="submit" class="hover:bg-green-500 bg-green-600 px-5 py-2 rounded shadow-xl text-white font-semibold ">
                    Update
                </button>
          
                <form action="/" method="get">
                    <button type="submit" class="hover:bg-gray-500 bg-gray-600 px-5 py-2 rounded shadow-xl text-white font-semibold ">
                        Go back
                    </button>
                </form>
               
            </div>
        </form>
    </div>
   </div>
    
<%- include('./partials/footer.ejs') %> 